{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Project",
			"type": "shell",
			"command": "make build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"showReuseMessage": true,
				"clear": true
			}
		},
		{
			"label": "Clean Project",
			"type": "shell",
			"command": "make clean",
			"problemMatcher": []
		},
		{
			"label": "Launch Debug",
			"type": "shell",
			"command": "make debug",
			"dependsOn": "Build Project",
			"isBackground": true
		},
		{
			"label": "Launch QEMU",
			"type": "process",
			"command": "qemu-system-x86_64",
			"args": [
				"-cdrom",
				"./build/kernel.iso",
				"-S",
				"-gdb",
				"tcp::1234"
			],
			"isBackground": true,
			"problemMatcher": "$gcc"
		}
	],
}